{
    "manifest_version": 3,
    "name": "LNT-EXT",
    "version": "1.0",
    "description": "A quick extension for bypassing the word press errors on lightnovelstranslations.com",
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://lightnovelstranslations.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}
